@model List<Question>



<div class="row mt-5 ml-4 mr-5 mb-5">
    <div class="col-lg-12" data-select2-id="46">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-lg-1">
                        <h5 class="card-title"><strong>Points </strong></h5>
                    </div>
                    <div class="col-lg-6">
                        <h5 class="card-title"><strong>Questions </strong></h5>
                    </div>
                    <div class="col-lg-5" pr-3>
                        <h5 class="card-title"><strong> Outcomes</strong></h5>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row" data-select2-id="45">
                    <div class="col-lg-12">
                        <form asp-action="SaveMatches" asp-controller="Question" method="post" data-select2-id="44">
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                <div class="form-group row mt-2">
                                    <input style="border-color:#92a8d1;" asp-for="@Model[i].MaxPoint" max="50" type="number" class="col-lg-1 mb-2 form-control-lg" value="0">
                                    @*<input asp-for="@Model[i].MaxPoint" max="50" type="number" class="col-lg-1 form-control-lg mb-2" />*@
                                    <label asp-for="@Model[i].QuestionText" class="col-lg-6 col-form-label">@Model[i].QuestionText</label>
                                    <input asp-for="@Model[i].QuestionText" type="hidden" />
                                    <div class="col-lg-5">
                                        <select asp-for="@Model[i].CourseOutcomeId" id="dropDownList-@i" asp-items="@ViewBag.CourseOutcomeId" class="form-control">
                                        </select>
                                    </div>
                                </div>
                                <div STYLE="background-color:#000000; height:3px; width:100%;"></div>
                            }

                            <div class="text-right mt-3">
                                <button id="btnSubmit" type="submit" class="btn btn-primary">Match Questions <i class="icon-paperplane ml-2"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script>
    $(document).ready(function() {
        var results = "@ViewBag.PythonOutcomes";
        var result = results.split("|");
        for(let i = 0; i < result.length; i++){
            document.getElementById("dropDownList-" + i).selectedIndex = +result[i];
        }
    });

</script>


